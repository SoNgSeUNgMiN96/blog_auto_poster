APP_NAME=blog-engine
APP_ENV=prod
API_ADMIN_TOKEN=replace-with-prod-admin-token

# DATABASE_URL을 직접 쓰고 싶으면 아래를 사용하세요.
# DATABASE_URL=mysql+pymysql://root:encoded_password@127.0.0.1:3306/blog_engine_prod?charset=utf8mb4

DB_DRIVER=mysql+pymysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=blog_engine_prod
DB_USER=root
DB_PASSWORD=
DB_PASSWORD_ENV=BLOG_ENGINE_DB_PASSWORD
DB_CHARSET=utf8mb4

MEDIA_ROOT=./media
IMAGE_MAX_WIDTH=1600
IMAGE_MAX_HEIGHT=1600
IMAGE_WEBP_QUALITY=82
IMAGE_KEEP_ORIGINAL=false
OPENAI_API_KEY=
OPENAI_API_KEY_ENV=BLOG_ENGINE_OPENAI_API_KEY
OPENAI_MODEL=gpt-4.1-mini

WORDPRESS_BASE_URL=https://example.com
WORDPRESS_USERNAME=admin
WORDPRESS_APP_PASSWORD=
WORDPRESS_DEFAULT_STATUS=publish
WORDPRESS_CATEGORY_MAP=ott:OTT 리뷰

GOOGLE_SERVICE_ACCOUNT_FILE=
GOOGLE_INDEXING_SCOPES=https://www.googleapis.com/auth/indexing
NAVER_RSS_PING_URL=https://searchadvisor.naver.com/ping

RATE_LIMIT=30/minute
AUTO_CREATE_TABLES=true
